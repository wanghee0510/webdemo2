@model IEnumerable<Music_Store.Models.Pic>
@{
    ViewData["Title"] = "Index2";
}
    <head>
        <style>
            .card {
                width: 250px;
                border-radius: 5px;
                margin-top: 10px;
                padding: 10px;
                box-shadow:0 4px 8px 0 rgba(0,0,0,2);
                transition:0.3s;
            }
        </style>
    </head>

<h1>Index2</h1>
<div class="container">
    <div class="row">
        @foreach(var item in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3">
                <div class="card">
                    <img src="https://i.pinimg.com/originals/08/cc/f8/08ccf8cc81c552aea68e6fec7784b963.png" alt="Paris" width="200" height="200" margin="10">
                    <p>@Html.DisplayFor(model => item.PicName)</p>
                    <p>@Html.DisplayFor(model => item.GiaTien)</p>
                    <p>@Html.DisplayFor(model => item.TieuDe)</p>
                </div>
            </div>
        }

    </div>

</div>

